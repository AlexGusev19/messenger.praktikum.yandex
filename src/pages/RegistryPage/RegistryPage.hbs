<div class="registration-page">
    <div class="registration__container">
        <h1 class="registration__title">Регистрация</h1>
        <form class="registration_form">
            <div class="login__form__input__container">
                {{#each inputItems}}
                    {{> Input type=this.type placeholder=this.placeholder name=this.name }}
                {{/each}}
            </div>

            {{> Button idButton="login_button" text="Зарегистрироваться" data-page="chat"}}
            {{> Link class="login__link" text="Войти" data-page="login"}}
        </form>
    </div>
</div>