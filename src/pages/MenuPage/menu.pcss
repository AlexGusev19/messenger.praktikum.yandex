.menu {
    display: flex;
    min-height: 100vh;
    justify-content: center;
    align-items: center;
}

.menu__container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 340px;
    height: 460px;
    padding: 10px;
    box-shadow: 0px 5px 10px 2px rgba(34, 60, 80, 0.2);
}

.menu__title {
    font-size: 4rem;
    margin-bottom: 2rem;
}

.menu__list {
    font-size: 2rem;
    padding-left: 0;
}
