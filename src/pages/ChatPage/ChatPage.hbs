<main class="container">
  <div class="chat__left-side">
    <div class="chat__left-side__header">
      {{> Link class="profile-link" data-page="profile" text="Профиль >" }}
    </div>
    <div class="chat__left-side__search">
      {{> Input class="chat__left-side__search__control" type="search" placeholder="Поиск" name="search" }}
    </div>
    <div class="chat__left-side__footer">
      <div class="chat__left-side__chat-list">
        Список чатов
      </div>
    </div>
  </div>
  <div class="chat__main">
    <div class="chat__main__container">
      <div class="chat__main__container__header">
        {{> ChatAvatar chatName="Вадим" avatarSrc="/images/user-blank-avatar.svg" avatarAlt="chat avatar"}}
        {{> ImageButton idButton="chat-menu" imgSrc="/images/menu-chat.svg" imgAlt="chat menu" }}
      </div>
      <div class="chat__main__container__content">
        <span>
          чат, скоро будет:) 
          {{> Link data-page="menuPage" text="Назад" }}
        </span>
      </div>
      <div class="chat__main__container__footer">
          <form class="chat__main__container__control">
            {{> ImageButton idButton="addFile" imgSrc="/images/add-file.svg" alt="add file" }}
            {{> Input class="chat__input" type="search" placeholder="Сообщение"  name="message" }}
            {{> ImageButton idButton="send" imgSrc="/images/right-arrow-button.svg" alt="send" }}
          </form>
      </div>
    </div>
  </div>
</main>