.error-page {
  display: flex;
  min-height: 100vh;
  justify-content: center;
  align-items: center;
}

.error__container {
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
}

.error__title {
  font-size: 4rem;
  margin-bottom: 20px;
}

.error__subtitle {
  font-size: 2rem;
  margin-bottom: 69px;
}

.error__link {
  color: #3369f3;
}
