<div class="container">
  <div class="profile__left-side">
    {{> ImageLink imgSrc="/images/left-arrow-button.svg" imgAlt="left arrow" data-page="chat" }}
  </div>
  <div class="profile__main">
    <div class="profile__main__container">
      {{> UserAvatar userName=userName imgSrc="/images/user-avatar.svg" imgAlt="user avatar" }}

      {{#if viewMode}}
        <div class="profile_data">
          {{#each itemList}}        
            {{> UserProfileDataRow rowName=this.rowName rowData=this.rowData }}    
          {{/each}}
        </div>

        <div class="profile__main__controls">
          {{> Link class="profile__link" data-page="profileChange" text="Изменить данные" }}
          {{> Link class="profile__link" data-page="profileChangePassword" text="Изменить пароль" }}
          {{> Link class="profile__link" data-page="login" text="Выйти" }}
        </div>
      {{else}}
        <form  class="profile_data">
          {{#each itemList}}            
            {{> UserProfileDataRow inputType=this.inputType inputName=this.inputName inputPlaceholder=this.inputPlaceholder changeMode=this.changeMode}}
          {{/each}}

          <div class="profile__control">
            {{> Button idButton="saveProfileData" text="Сохранить" data-page="profile"}}
          </div>          
        </form>
      {{/if}}           
    </div>
  </div>
</div>