.profile__left-side {
  align-items: center;
  border-right: 1px solid var(--line-color);
  display: flex;
  flex: 0 0 64px;
  justify-content: center;
}

.profile__main {
  flex-grow: 1;
}

.profile__main__container {
  margin: 0 auto;
  padding-top: 60px;
  width: 520px;
}

.profile__main__controls {
  display: flex;
  flex-direction: column;
  margin-top: 60px;

  & .profile__link {
    border-bottom: 1px solid var(--line-color);
    padding-bottom: 10px;
    padding-top: 10px;
  }
}

.profile__link:last-of-type {
  border: none;
  color: var(--error-button-color);
}

.profile__control {
  display: flex;
  justify-content: center;
  margin-top: 120px;
}
