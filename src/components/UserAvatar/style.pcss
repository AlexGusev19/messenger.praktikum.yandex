.user__avatar__container {
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 60px;
}

.user__avatar,
.user__avatar__change {
  align-items: center;
  border-radius: 80px;
  display: flex;
  height: 130px;
  justify-content: center;
  overflow: hidden;
  position: relative;
  width: 130px;
}

.user__avatar {
  margin-bottom: 21px;
}

.user__avatar__change {
  background-color: var(--background-avatar-change);
  color: var(--background-color);
  opacity: 0;
}

.user__avatar__change:hover {
  opacity: 1;
}

.user__avatar__img {
  position: absolute;
}

.user__avatar__title {
  text-align: center;
}
