.modal {
  position: absolute;
  display: none;
  width: 100%;
  height: 100%;
  background-color: var(--background-avatar-change);

  & .modal__container {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  & .modal__content {
    width: 340px;
    height: 257px;
    background-color: var(--background-color);
    border-radius: 12px;
    padding: 40px 30px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    & .modal__content__title {
      text-align: center;
      color: var(--text-color);
      font-weight: 600;
      font-size: 16px;
    }

    & .modal__content__field {
      text-align: center;
      margin-bottom: 40px;
    }

    & .modal__input {
      border: none;
      border-bottom: 1px solid;
      border-bottom-color: var(--primary-color);
      border-radius: 4px 4px 0 0;
      outline: none;
      padding-bottom: 7px;
      padding-top: 32px;
      width: 100%;
    }
  }
}
